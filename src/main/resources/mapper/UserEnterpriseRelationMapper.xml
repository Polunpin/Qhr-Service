<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.dao.UserEnterpriseRelationMapper">

    <resultMap id="RelationMap" type="com.tencent.model.UserEnterpriseRelation">
        <id property="id" column="id"/>
        <result property="enterpriseId" column="enterprise_id"/>
        <result property="userId" column="user_id"/>
        <result property="role" column="role"/>
        <result property="createdAt" column="created_at" javaType="java.time.LocalDateTime" />
    </resultMap>

    <sql id="Relation_Columns">
        id, enterprise_id, user_id, role, created_at
    </sql>

    <select id="getByUserEnterprise" resultMap="RelationMap">
        SELECT <include refid="Relation_Columns"/>
        FROM user_enterprise_relation
        WHERE user_id = #{userId} AND enterprise_id = #{enterpriseId}
        LIMIT 1
    </select>

    <select id="listByUserId" resultMap="RelationMap" parameterType="java.lang.Long">
        SELECT <include refid="Relation_Columns"/>
        FROM user_enterprise_relation
        WHERE user_id = #{userId}
        ORDER BY id DESC
    </select>

    <select id="listByEnterpriseId" resultMap="RelationMap" parameterType="java.lang.Long">
        SELECT <include refid="Relation_Columns"/>
        FROM user_enterprise_relation
        WHERE enterprise_id = #{enterpriseId}
        ORDER BY id DESC
    </select>

    <insert id="insert" parameterType="com.tencent.model.UserEnterpriseRelation" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_enterprise_relation (enterprise_id, user_id, role)
        VALUES (#{enterpriseId}, #{userId}, #{role})
    </insert>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM user_enterprise_relation WHERE id = #{id}
    </delete>

    <delete id="deleteByUserEnterprise">
        DELETE FROM user_enterprise_relation
        WHERE user_id = #{userId} AND enterprise_id = #{enterpriseId}
    </delete>

</mapper>
